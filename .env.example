# Resend API Key (DEPRECATED - not currently used)
# Get yours at: https://resend.com/api-keys
RESEND_API_KEY=your_resend_api_key_here

# Email configuration (DEPRECATED - not currently used)
# For testing, use onboarding@resend.dev
# For production, use your verified domain email
FROM_EMAIL=onboarding@resend.dev

# Your email where booking notifications will be sent
ADMIN_EMAIL=your-admin-email@example.com

# Mailgun Configuration
# Get your API key from: https://app.mailgun.com/app/account/security/api_keys
# Your domain can be found at: https://app.mailgun.com/app/sending/domains
MAILGUN_API_KEY=your_mailgun_api_key_here
MAILGUN_DOMAIN=your-domain.com

# Zoho Calendar API Configuration
# Get your credentials from: https://api-console.zoho.com/

# Zoho OAuth Client ID
ZOHO_CLIENT_ID=your_zoho_client_id_here

# Zoho OAuth Client Secret
ZOHO_CLIENT_SECRET=your_zoho_client_secret_here

# Zoho OAuth Refresh Token
# Generate this from the Zoho API Console
ZOHO_REFRESH_TOKEN=your_zoho_refresh_token_here

# The Zoho Calendar ID where events will be created
# You can find this in Zoho Calendar settings
ZOHO_CALENDAR_ID=your_calendar_id_here

# Zoho region: 'com' (US), 'eu' (Europe), 'in' (India), 'au' (Australia), 'jp' (Japan)
ZOHO_REGION=com

# Enable Zoho Meeting link creation (set to 'true' to enable)
ZOHO_ENABLE_MEETING=true

# Zoho Organization ID (ZSOID) - Required when ZOHO_ENABLE_MEETING is true
# You can find this in your Zoho Meeting account settings or API response
ZOHO_ORGANIZATION_ID=your_zoho_organization_id_here

# Mailgun From Email (optional - defaults to noreply@MAILGUN_DOMAIN)
MAILGUN_FROM=GrowRipple.ai <noreply@your-domain.com>
